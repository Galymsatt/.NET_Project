@{
    //Layout = null;
    ViewData["Title"] = "Home";
}





<div class="container">
    <h2>Store</h2>
    <br />
    <h3>Categories</h3>
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a asp-controller="Products" class="list-group-item list-group-item-action" asp-action="CategoriesProducts" asp-route-categoryId=""> All </a>
                @foreach (Category c in ViewBag.Categories)
                {
                    @*<a asp-href="categoryProducts/@c.name" class="list-group-item list-group-item-action"> @c.name </a>*@
                    <a asp-controller="Products" class="list-group-item list-group-item-action" asp-action="CategoriesProducts" asp-route-categoryId="@c.id"> @c.name </a>
                }
            </div>
        </div> <!-- col.// -->
       
        <div class="col-md-9">
            @foreach (Product p in ViewBag.Products)
            {
                <div class="col-md-6">
                    <div class="jumbotron">
                        <h1 class="display-5">@p.name</h1>
                        <p class="lead"> @p.content </p>
                        <hr class="my-4">
                        <p>Category: <a asp-controller="Categories" asp-action="Index"> @p.category.name </a></p> @*@p.category.name*@
                        <a asp-controller="Products" asp-action="ProductPage" asp-route-id="@p.id" class="btn btn-primary btn-lg" role="button"> View product </a>
                    </div>
                </div>
            }
        </div> <!-- col.// -->
    </div> <!-- row.// -->
</div> <!-- container //  -->

